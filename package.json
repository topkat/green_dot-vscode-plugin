{
    "name": "green-dot-vscode-module",
    "displayName": "ðŸŸ¢ green dot VSCode Extension",
    "description": "A VS Code extension that provides syntax highlight and helpers for green_dot projects",
    "version": "1.0.3",
    "publisher": "topkat",
    "main": "./out/extension.js",
    "keywords": [
        "green_dot",
        "green dot",
        "greenDot"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test",
        "package": "tsc && vsce package",
        "publish": "tsc && vsce publish"
    },
    "categories": [
        "Other"
    ],
    "authors": [
        "topkat",
        "j0j032"
    ],
    "activationEvents": [
        "onLanguage:javascript",
        "onLanguage:javascriptreact",
        "onLanguage:typescript",
        "onLanguage:typescriptreact",
        "onLanguage:json"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/topkat/green_dot-vscode-plugin"
    },
    "icon": "icon.png",
    "contributes": {
        "commands": [
            {
                "command": "coreVscodeModule.header1",
                "title": "Write a H1 header as a ascii art comment"
            },
            {
                "command": "coreVscodeModule.header2",
                "title": "Write a H2 header as a ascii art comment"
            }
        ]
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "@types/vscode": "^1.84.0",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "@vscode/test-cli": "^0.0.4",
        "@vscode/test-electron": "^2.3.8",
        "eslint": "^8.54.0",
        "typescript": "^5.3.2"
    },
    "dependencies": {
        "glob": "^10.3.10",
        "simple-file-templater": "^1.0.2",
        "topkat-utils": "^1.3.19"
    },
    "engines": {
        "vscode": "^1.84.0"
    }
}
